{
    "name": "da-eto-ya/behat-spawner-extension",
    "description": "Spawns processes when Behat events occurs",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilya Pleshakov",
            "email": "da-eto@ya.ru"
        }
    ],

    "require": {
        "php": ">=5.3.0",
        "behat/behat": "~2.5",
        "symfony/process": ">=2.3.12"
    },

    "require-dev": {
        "phpspec/phpspec": "~2.0"
    },

    "autoload": {
        "psr-0": {
            "DaEtoYa\\SpawnerExtension": "src/"
        }
    },

    "config": {
        "bin-dir": "bin"
    }
}